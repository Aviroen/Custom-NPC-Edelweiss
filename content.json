{
    "Format": "2.3.0",  //version of content patcher
    "ConfigSchema": {   //whether you have dynamic tokens that can be configured by the player used in generic mod config menu
        "Unwipeable": { //name of token
            "AllowValues": "true, false",   //allowvalues can be any subset, any amount
            "Default": "true",  //sets basic default to sit on
            "Section": "Content",   //section is optional, but it does help organization
            "Description": "Default true to have Edelweiss' memory be unwipeable from the witch statue."
        },
        "SpouseRoom": {
            "AlloweValues": "Furnished, Unfurnished",
            "Default": "Furnished",
            "Section": "Content",
            "Description": "Make Edelweiss' spouseroom unfurnished or furnished."
        }
    },
    ///////////////////////////////////////////////////////dynamic tokens
    //PLAYER_HAS_MAIL Host HasDwarvishTranslationGuide putting this somewhere to remember
    "DynamicTokens": [
        //Attempted MP patching.
        {
            "Name": "FarmHouse",
            "Value": "FarmHouse"
        },
        {
            "Name": "FarmHouse",
            "Value": "Cabin",
            "When": {
                "IsMainPlayer": "false"
            }
        },
        {
            "Name": "IsOddYear",
            "Value": "{{Query: {{Year}} % 2 = 1}}" //true
        },
        //date shortening
        {
            "Name": "Date",
            "Value": "{{Season}} {{Day}}"
        },
        //summit SVE patching
        {
            "Name": "Summit",
            "Value": "Summit"
        },
        {
            "Name": "Summit",
            "Value": "Custom_SVESummit",
            "When": {
                "HasFlag |contains=Farm_Eternal": false,
                "HasMod |contains=FlashShifter.StardewValleyExpandedCP": true
            }
        },
        //marriage extra dialogue
        {
            "Name": "MarriageStage",
            "Value": "Late"
        },
        {
            "Name": "MarriageStage",
            "Value": "Early",
            "When": {
                "TheMightyAmondee.CustomTokens/YearsMarried": "0, 1"
            }
        },
        //date night redux hotspring
        {
            "Name": "Hotspring",
            "Value": "NoHotspring"
        },
        {
            "Name": "Hotspring",
            "Value": "YesHotspring",
            "When": {
                "HasMod": "flashshifter.GrandpasFarm",
                "FarmType": "Standard",
                "HasSeenEvent": "2554911"
            }
        }
    ],
    ///////////////////////////////////////////////////////changes
    "Changes": [
        //////////////////////////////////////////////loads
        { //load my furniture
            "LogName": "Edel's Room Furniture",
            "Action": "Load",
            "Target": "Maps/Wompwomp, Maps/Edelfurn", //dual loads because we love spacesaving
            "FromFile": "assets/Furniture/{{TargetWithoutPath}}.png"
        },
        { //blank loads so that i can target edit
            "Action": "Load",
            "Target": "Characters/Dialogue/EdelweissSeung, Characters/Dialogue/MarriageDialogueEdelweissSeung, Characters/schedules/EdelweissSeung, Strings/Schedules/EdelweissSeung",
            "FromFile": "data/Blank.json"
        },
        //////////////////////////////////////////////includes
        {
            "Logname": "EdelIncludes",
            "Action": "Include",
            "FromFile": "data/animationDescriptions.json, data/ConcessionTastes.json, data/DeathInsurance.json, data/Dialogue.json, data/Edelweiss.json, data/Festivals.json, data/Gifts.json, data/HeartEvents.json, data/Locations.json, data/Mail.json, data/MarriageDialogue.json, data/Outfits.json, data/Schedule.json, data/ScheduleDialogue.json, data/SpaceCore.json, data/StringsFromCSFiles.json, data/TriggerActions.json"
        }
    ]
}
